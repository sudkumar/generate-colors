{
  "name": "generate-colors",
  "version": "1.3.4",
  "description": "Get colors for a string with accessibility compliant",
  "keywords": [
    "generate colors"
  ],
  "bugs": {
    "url": "https://github.com/sudkumar/generate-colors/issues"
  },
  "license": "MIT",
  "author": "Sudhir Mitharwal <luckysud4@gmail.com>",
  "files": [
    "bin",
    "dist",
    "index.d.ts"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "browser": "dist/index.umd.js",
  "bin": {
    "generate-colors": "bin/generate-colors.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sudkumar/generate-colors.git"
  },
  "scripts": {
    "lint": "eslint cli && eslint src",
    "test": "mocha",
    "pretest": "npm run build",
    "coverage": "nyc --reporter=lcov --reporter=text npm test",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "docs": "serve .out",
    "dev": "npm-run-all -p -l docs watch",
    "prepare": "npm run lint && npm test",
    "release": "np",
    "postrelease": "gh-pages -d .out"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "chai": "^4.2.0",
    "eslint": "^7.13.0",
    "faker": "^5.1.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "mocha": "^8.2.1",
    "np": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "rollup": "^2.33.1",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-fill-html": "^1.1.0",
    "rollup-plugin-svelte": "^6.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "serve": "^11.3.2",
    "svelte": "^3.29.7"
  },
  "homepage": "https://github.com/sudkumar/generate-colors#readme",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "dependencies": {
    "@rollup/plugin-html": "^0.2.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 6
    },
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": [
        1
      ]
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,html,css,scss,sass,yml}": [
      "prettier --write"
    ]
  }
}
